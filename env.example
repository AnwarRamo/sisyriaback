# Server Configuration
SERVER_PORT=8080
PORT=8080

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# JWT Configuration
JWT_ACCOUNT_ACTIVATION_KEY=your-jwt-account-activation-key
JWT_RESET_PASSWORD_KEY=your-jwt-reset-password-key
JWT_SECRET=your-jwt-secret-key
JWT_REFRESH_SECRET=your-jwt-refresh-secret
JWT_ACCESS_TOKEN_KEY=your-jwt-access-token-key

# Email Configuration
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
MAILTRAP_TOKEN=your-mailtrap-token
MAILTRAP_ENDPOINT=https://send.api.mailtap.io/

# Client Configuration
CLIENT_URL=https://your-frontend-domain.netlify.app

# Session Configuration
SESSION_SECRET=your-session-secret-key
TOKEN_VERSION=1

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Environment
NODE_ENV=development 